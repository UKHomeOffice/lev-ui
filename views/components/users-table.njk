{% macro usersTable(users, usersMetaData) %}
  {% from "govuk/components/table/macro.njk" import govukTable %}

  {% set startIndex = ((usersMetaData.currentPage - 1) * usersMetaData.perPage) + 1 %}
  {% set endIndex = usersMetaData.currentPage * usersMetaData.perPage %}

  {% if endIndex > usersMetaData.total %}
    {% set endIndex = usersMetaData.total %}
  {% endif %}

  {% set userInfo = "Showing <b>" + startIndex + "</b>-<b>" + endIndex + "</b> of <b>" + usersMetaData.total + "</b> records" %}
  <p>{{ userInfo | safe }}</p>

  {% set usersArray = [] %}
  {% set usersHeaderArray = [ { text: "User" }, { text: "Team" }, { text: "Email address" } ] %}

  {% for user in users | sort(attribute='username') %}
    {% set rowArray = [] %}
    {% set rowArray = [ { text: (user.firstName + " " + user.lastName) | title }, { text: user.teamName }, { text: user.email } ] %}
    {% set usersArray = (usersArray.push(rowArray), usersArray) %}
  {% endfor %}

  {{ govukTable({
  classes: "details",
  firstCellIsHeader: false,
  head: usersHeaderArray,
  rows: usersArray
  }) }}

  <p align="right">{{ userInfo | safe }}</p>

{% endmacro %}
