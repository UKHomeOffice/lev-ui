{
  "name": "lev-ui",
  "version": "1.0.0",
  "description": "Life Events Verification User Interface",
  "main": "app.js",
  "scripts": {
    "start": "node .",
    "dev": "nodemon .",
    "postinstall": "npm run build",
    "build": "rm -rf public/; npm-run-all build:sass build:js",
    "build:sass": "mkdir -p public/stylesheets; sass --quiet-deps --style=compressed assets/stylesheets/app.scss public/stylesheets/application.css",
    "build:js": "mkdir -p public/javascripts; cat node_modules/govuk-frontend/govuk/all.js node_modules/hmpo-components/all.js assets/javascripts/*.js > public/javascripts/application.js",
    "test": "npm-run-all test:lint test:unit test:coverage test:ui",
    "test:lint": "eslint .",
    "test:unit": "jest test",
    "test:coverage": "jest test --coverage",
    "test:ui": "npm-run-all -pr start cypress:all",
    "cypress": "cypress open --config baseUrl=${TEST_URL:-http://localhost:8001}",
    "cypress:all": "cypress run --config baseUrl=${TEST_URL:-http://localhost:8001} --headless --browser chrome",
    "cypress:acceptance": "cypress run --config baseUrl=${TEST_URL:-http://localhost:8001},testFiles=**/acceptance/**/*.js --headless --browser chrome",
    "cypress:smoke": "cypress run --config baseUrl=${TEST_URL:-http://localhost:8001},testFiles=**/smoke/**/*.js --headless --browser chrome"
  },
  "author": "HMPO",
  "dependencies": {
    "express": "^4.17.3",
    "govuk-frontend": "^4.0.1",
    "hmpo-app": "^2.0.0",
    "hmpo-components": "^5.2.1",
    "hmpo-config": "^2.2.0",
    "hmpo-form-wizard": "^12.0.2",
    "hmpo-i18n": "^5.0.1",
    "hmpo-logger": "^4.1.5",
    "hmpo-model": "^4.1.0",
    "npm-run-all": "^4.1.5",
    "nunjucks": "^3.2.3",
    "sass": "^1.49.9"
  },
  "devDependencies": {
    "cypress": "^9.5.2",
    "cypress-keycloak": "^1.8.0",
    "eslint": "^8.12.0",
    "eslint-plugin-cypress": "^2.12.1",
    "eslint-plugin-jest": "^26.1.3",
    "jest": "^27.5.1",
    "nodemon": "^2.0.15"
  }
}
